# 운영환경 설정
ENVIRONMENT=production

# 데이터베이스 설정 (AWS DocumentDB 또는 MongoDB Atlas)
DATABASE_URL=mongodb://username:password@production-cluster:27017/app?authSource=admin&ssl=true

# Google OAuth 설정 (운영환경용)
GOOGLE_CLIENT_ID=your-production-google-client-id

# 서버 설정
FRONTEND_URL=https://your-domain.com
API_PORT=8000
HOST=0.0.0.0

# CORS 설정
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# 로깅 설정
LOG_LEVEL=WARNING
ENABLE_DEBUG=false

# 보안 설정
SECRET_KEY=your-super-secret-production-key-make-it-random-and-strong
USE_HTTPS=true
